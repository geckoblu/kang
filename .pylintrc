[MASTER]

# extension-pkg-whitelist=PySide2.QtCore,PySide2.QtGui,PySide2.QtWidgets

[MESSAGES CONTROL]

disable=
    missing-module-docstring,
    missing-function-docstring,
    missing-class-docstring,
    too-many-instance-attributes,
    too-many-statements,
    too-many-arguments,
    too-few-public-methods,
    too-many-public-methods,
    too-many-locals,

    fixme,
        
    undefined-variable, # Problems with PySide2 imports
    no-name-in-module, # Problems with PySide2 imports
    duplicate-code, # Remove at the end of porting
    bare-except,
    broad-except,
    unused-argument,
    no-self-use

[BASIC]

# Regular expression which should only match correct module names
module-rgx=([a-z_][a-zA-Z0-9]*)$

# Regular expression which should only match correct module level names
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__)|(__[a-z][a-zA-Z0-9_]*))$

# Regular expression which should only match correct class names
class-rgx=[A-Z_][a-zA-Z0-9]+$

# Regular expression which should only match correct function names
function-rgx=[a-z_][a-zA-Z0-9]{2,35}$

# Regular expression which should only match correct method names
method-rgx=(([a-z_][a-zA-Z0-9]{2,35})|(test_[a-zA-Z0-9_]{2,35})|(__init__)|(__str__)|(__eq__)|(__repr__)|(exec_))$

# Regular expression which should only match correct instance attribute names
attr-rgx=[a-z_][a-zA-Z0-9]{1,35}$

# Regular expression which should only match correct argument names
argument-rgx=[a-z_][a-zA-Z0-9]{1,35}$

# Regular expression which should only match correct variable names
variable-rgx=([a-z_][a-zA-Z0-9]{0,35}|(exc_type)|(exc_value)|(exc_traceback)|(xdg_config_home)|(config_dir)|(__))$

# Regular expression which should only match correct attribute names in class
# bodies
class-attribute-rgx=([A-Za-z_][A-Za-z0-9_]{2,35}|(__.*__))$

# Good variable names which should always be accepted, separated by a comma
good-names=i,j,k,ex,Run,_,x,y
    
[FORMAT]

# Maximum number of characters on a single line.
max-line-length=120
