[MASTER]

# extension-pkg-whitelist=PySide2.QtCore,PySide2.QtGui,PySide2.QtWidgets

[MESSAGES CONTROL]

disable=
    missing-module-docstring,
    missing-class-docstring,
    too-many-instance-attributes,
    too-many-statements,
    too-many-arguments,
    too-many-public-methods,
    too-many-locals,
    too-few-public-methods,
    no-else-return,

    fixme,
        
    undefined-variable, # Problems with PySide2 imports
    no-name-in-module, # Problems with PySide2 imports
    duplicate-code, # Remove at the end of porting
    bare-except,
    broad-except,
    no-self-use

[BASIC]

# Include a hint for the correct naming format with invalid-name.
include-naming-hint=yes

# Naming style matching correct argument names.
argument-naming-style=camelCase

# Naming style matching correct attribute names.
attr-naming-style=camelCase

# Naming style matching correct function names.
function-naming-style=camelCase

# Naming style matching correct method names.
method-naming-style=camelCase

# Naming style matching correct module names.
module-naming-style=camelCase

# Naming style matching correct variable names.
variable-naming-style=camelCase

# Regular expression which should only match correct variable names
# Overrides variable-naming-style.
variable-rgx=(([a-z_][a-zA-Z0-9]{1,})|(__[a-z][a-zA-Z0-9_]+__))$

# Good variable names which should always be accepted, separated by a comma.
good-names=__,x,y,i,ok,tr
    
[FORMAT]

# Maximum number of characters on a single line.
max-line-length=120
